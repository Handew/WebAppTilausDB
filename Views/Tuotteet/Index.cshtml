@model IEnumerable<WebAppTilausDB.Models.Tuotteet>

@{
    ViewBag.Title = "Tuotteet";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Uusi tuote", "Create")
</p>

<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {


        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nimi)</h5>
                </div>
                <img src="@Html.DisplayFor(modelItem => item.Kuva)" class="card-img-top" alt="@Html.DisplayFor(modelItem => item.Kuva)">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.DisplayFor(modelItem => item.Ahinta) €</li>
                </ul>
                <div class="card-body">
                    @Html.ActionLink("Muokkaa", "Edit", new { id = item.TuoteID }) |
                    @Html.ActionLink("Tietoja", "Details", new { id = item.TuoteID }) |
                    @Html.ActionLink("Poista", "Delete", new { id = item.TuoteID })
                </div>
            </div>
        </div>

        }
        <br>
    </div>
</div>   
